<mvc:View controllerName="FormObjectsExample.controller.View1"
xmlns:html="http://www.w3.org/1999/xhtml" 
xmlns:mvc="sap.ui.core.mvc"
xmlns="sap.m"
xmlns:form="sap.ui.layout.form"
xmlns:layout="sap.ui.layout">
	<App>
		<pages>
			<Page title="Your Quick Start application is ready!">
				<content>
				<layout:Grid defaultSpan="L12 M12 S12" width="auto">
					<layout:content>
					<form:SimpleForm maxContainerCols="1" editable="true"
					layout="ResponsiveGridLayout"	title="Employee Look Up!">
						<form:content>
						<layout:Grid defaultSpan="L12 M12 S12" maxWidth="1024">
							<layout:content>
								<form:Form class="editableForm">
									<form:layout>
								    <form:ResponsiveGridLayout labelSpanL="3" labelSpanM="3"
									emptySpanL="3" emptySpanM="3" columnsL="1" columnsM="1">
								    </form:ResponsiveGridLayout>
									</form:layout>
									<form:formContainers>
										<form:FormContainer expandable="true">
										<!-- Elements is Here -->
											<form:FormElement visible="true">
												<form:label>
													<Label text="Employee Name" required="true"/>
												</form:label>
												<form:fields>
													<Input/>
												</form:fields>
											</form:FormElement>
											
												<form:FormElement visible="true">
												<form:label>
													<Label text="Employee Number" required="true"/>
												</form:label>
												<form:fields>
													<Input/>
												</form:fields>
											</form:FormElement>
											
												<form:FormElement visible="true">
												<form:label>
													<Label text="Employee Start Date" required="true"/>
												</form:label>
												<form:fields>
													<DatePicker></DatePicker>
												</form:fields>
											</form:FormElement>
											
												<form:FormElement visible="true">
												<form:label>
													<Label text="Employee End Date" required="false"/>
												</form:label>
												<form:fields>
													<DatePicker></DatePicker>
												</form:fields>
											</form:FormElement>
											
											<form:FormElement visible="true">
												<form:label>
													<Label text="Employee Country" required="false"/>
												</form:label>
												<form:fields>
												<Input showValueHelp="true"></Input>
												</form:fields>
											</form:FormElement>
											
											<form:FormElement visible="true">
												<form:label>
													<Label text="Employee Address" required="false"/>
												</form:label>
												<form:fields>
											    <Input showValueHelp="false"></Input>
												<Input showValueHelp="true"></Input>
												<Button text="Save"></Button>
												</form:fields>
											</form:FormElement>
											
												<form:FormElement visible="true">
												<form:label>
													<Label text="Employee Description" required="false"/>
												</form:label>
												<form:fields>
											    <Input showValueHelp="false"></Input>
												</form:fields>
											</form:FormElement>
											
										</form:FormContainer>
									</form:formContainers>
								</form:Form>
							</layout:content>
						</layout:Grid>
						</form:content>
				   	</form:SimpleForm>
					</layout:content>
				</layout:Grid>
			</content>
			</Page>
		</pages>
	</App>
</mvc:View>